
@{
    ViewBag.Title = "ListStep";
    Layout = "~/Areas/Company/Views/Shared/_ClientLayoutPage.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Requirement Process
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Dashboard</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <!-- Small boxes (Stat box) -->
    <!-- Main row -->
    <div class="row">
        <!-- Left col -->
        <div class="col-md-7">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">List Activity</h3>
                    <div class="box-tools">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">

                            <div class="input-group-btn">
                                <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-bordered">
                        <tr>
                            <th style="width: 10px">#</th>
                            <th>Activity name</th>
                            <th>%/ All activity</th>
                            <th>States</th>
                            <th>Progress</th>
                            <th>Input</th>
                            <th style="width: 40px">Progress</th>

                        </tr>
                        <tr>
                            <td>1.</td>
                            <td><a href="@Url.Action("ListActivity","InstanceManagement")">Elicitation</a></td>
                            <td>20%</td>
                            <td><span class="badge bg-blue">Doing</span></td>
                            <td>
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-danger" style="width: 55%"></div>
                                </div>
                            </td>
                            <td>upload/doc...</td>
                            <td><span class="badge bg-blue">55%</span></td>
                        </tr>
                        <tr>
                            <td>2.</td>
                            <td><a href="@Url.Action("ListActivity","RunProcess")">Analysis</a></td>
                            <td>20%</td>
                            <td><span class="badge bg-yellow">Open</span></td>
                            <td>
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-yellow" style="width: 0%"></div>
                                </div>
                            </td>
                            <td>upload/doc...</td>
                            <td><span class="badge bg-yellow">0%</span></td>
                        </tr>
                        <tr>
                            <td>3.</td>
                            <td><a href="@Url.Action("ListActivity","RunProcess")">Specification</a></td>
                            <td>20%</td>
                            <td><span class="badge bg-yellow">Open</span></td>
                            <td>
                                <div class="progress progress-xs ">
                                    <div class="progress-bar progress-bar-yellow" style="width: 0%"></div>
                                </div>
                            </td>
                            <td>upload/doc...</td>
                            <td><span class="badge bg-yellow">0%</span></td>
                        </tr>
                        <tr>
                            <td>4.</td>
                            <td><a href="@Url.Action("ListActivity","RunProcess")">Analysis</a></td>
                            <td>20%</td>
                            <td><span class="badge bg-yellow">Open</span></td>
                            <td>
                                <div class="progress progress-xs ">
                                    <div class="progress-bar progress-bar-yellow" style="width: 0%"></div>
                                </div>
                            </td>
                            <td><a href="@Url.Action("ListActivity","RunProcess")">Upload</a></td>
                            <td><span class="badge bg-yellow">0%</span></td>
                        </tr>

                    </table>
                </div>
                <!-- /.box-body -->
                <div class="box-footer clearfix">
                    <ul class="pagination pagination-sm no-margin pull-right">
                        <li><a href="#">&laquo;</a></li>
                        <li><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">&raquo;</a></li>
                    </ul>
                </div>
            </div>
            <!-- /.box -->


        </div>
        <section class="col-lg-5 col-md-5 col-sm-5 col-xs-5 connectedSortable">
            <!-- Calendar -->
            <div class="box box-solid bg-green-gradient">
                <div class="box-header">
                    <i class="fa fa-calendar"></i>

                    <h3 class="box-title">Calendar</h3>
                    <!-- tools box -->
                    <div class="pull-right box-tools">
                        <!-- button with a dropdown -->
                        <div class="btn-group">
                            <button type="button" class="btn btn-success btn-sm dropdown-toggle" data-toggle="dropdown">
                                <i class="fa fa-bars"></i>
                            </button>
                            <ul class="dropdown-menu pull-right" role="menu">
                                <li><a href="#">Add new event</a></li>
                                <li><a href="#">Clear events</a></li>
                                <li class="divider"></li>
                                <li><a href="#">View calendar</a></li>
                            </ul>
                        </div>
                        <button type="button" class="btn btn-success btn-sm" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-success btn-sm" data-widget="remove">
                            <i class="fa fa-times"></i>
                        </button>
                    </div>
                    <!-- /. tools -->
                </div>
                <!-- /.box-header -->
                <div class="box-body no-padding">
                    <!--The calendar -->
                    <div id="calendar" style="width: 100%"></div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer text-black">
                    <div class="row">
                        <div class="col-sm-6">
                            <!-- Progress bars -->
                            <div class="clearfix">
                                <span class="pull-left">Task #1</span>
                                <small class="pull-right">55%</small>
                            </div>
                            <div class="progress xs">
                                <div class="progress-bar progress-bar-green" style="width: 90%;"></div>
                            </div>

                            <div class="clearfix">
                                <span class="pull-left">Task #2</span>
                                <small class="pull-right">0%</small>
                            </div>
                            <div class="progress xs">
                                <div class="progress-bar progress-bar-green" style="width: 0%;"></div>
                            </div>
                        </div>
                        <!-- /.col -->
                        <div class="col-sm-6">
                            <div class="clearfix">
                                <span class="pull-left">Task #3</span>
                                <small class="pull-right">0%</small>
                            </div>
                            <div class="progress xs">
                                <div class="progress-bar progress-bar-green" style="width: 0%;"></div>
                            </div>

                            <div class="clearfix">
                                <span class="pull-left">Task #4</span>
                                <small class="pull-right">0%</small>
                            </div>
                            <div class="progress xs">
                                <div class="progress-bar progress-bar-green" style="width: 0%;"></div>
                            </div>
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
                </div>
            </div>
            <!-- /.box -->

        </section>
        <!-- right col -->
    </div>
    <!-- /.row (main row) -->

</section>


