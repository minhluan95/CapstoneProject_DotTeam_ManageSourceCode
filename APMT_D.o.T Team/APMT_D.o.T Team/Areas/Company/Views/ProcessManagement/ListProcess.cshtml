@using APMT_D.o.T_Team.Areas.Company.Models
@model lstProcess_Running
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Company/Views/Shared/_ClientLayoutPage.cshtml";
    var lst = (List<lstProcess_Running>)ViewBag.List;
    int i = 0;
}
<script src="~/Content/LoginPartial/js/datetimepicker).js"></script>
<br />
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <button type="submit" class="btn btn-primary" data-toggle="collapse" data-target="#AddNew">Add Process</button>
            <div id="AddNew" class="box collapse">
                <!-- /.box-header -->
                <!-- form start -->
                <form role="form" action="~/Company/ManageProject/AddNew/" method="post">
                    <div class="box-body">

                        <div class="form-group">
                            <label for="exampleInputFile">Project Name</label><br />
                            <div class="btn-group">
                                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Choose a process <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a href="#">Requirement Process</a></li>
                                    <li><a href="#">Architecture & Design Process</a></li>
                                    <li><a href="#">Code Process</a></li>
                                </ul>
                            </div>
                        </div>
                        @*<div class="form-group">
                            <label for="exampleInputFile">Target Date</label>
                            <input type='text' class="form-control" id='datetimepicker' style="width:40%" />
                        </div>*@
                        <div class="form-group">
                            <label for="exampleInputFile">Creator</label>
                            <input id="disabledInput" type="text" class="form-control pull-right" name="name" required disabled>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputFile">Description</label>
                            <textarea class="form-control" rows="5" id="comment" disabled></textarea>
                        </div>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary btn-md">Add</button>
                    </div>
                </form>
            </div>
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">List Processes</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example2" class="table table-bordered table-hover text-center">
                        <thead>
                            <tr>
                                <th>No.</th>
                                <th>Name</th>

                                <th>Target Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in lst)
                            {
                                i++;
                                <tr>
                                    <td>@i</td>
                                    <td>@item.name_process</td>
                                    <td>@item.process_targetdate</td>
                                    <td>
                                        <a href="@Url.Action("AddMember","ProcessManagement")" class="btn btn-primary">Add Member</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
