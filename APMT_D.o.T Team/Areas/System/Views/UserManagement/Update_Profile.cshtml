
@{
    ViewBag.Title = "UpdateProfile";
    Layout = "~/Areas/System/Views/Shared/_SystemLayoutPage.cshtml";
}


<div class="col-sm-12">
    <center>
        <h2>Update Profile</h2>
    </center>
    <form>
        <div class="form-group col-lg-6 col-lg-offset-3">
            <label for="exampleInputEmail1">Full Name</label>
            <input type="text" class="form-control" id="fullname" placeholder="Full name">
        </div>
        <div class="form-group col-sm-6 col-lg-offset-3">
            <label for="exampleInputEmail1">Email address</label>
            <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Email">
        </div>
        <div class="form-group col-sm-6 col-lg-offset-3">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
        </div>
        <div class="form-group col-sm-6 col-lg-offset-3">
            <label for="exampleInputPassword1">New Password</label>
            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
        </div>
        <div class="form-group col-sm-6 col-lg-offset-3">
            <label for="exampleInputPassword1">New Password Confirmation</label>
            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
        </div>
        <div class="form-group col-sm-6 col-lg-offset-3">
            <label for="exampleInputPassword1">Avatar</label>
            <img style="width:20%;" src="~/Content/Images/Avatar_ProductAD.jpg" />
            <input style="padding-top:3%" type="file" id="exampleInputFile">
        </div>
        <div class="col-lg-12 col-sm-12 col-sm-offset-5">
            <button type="button" class="btn btn-primary btn-lg">Confirm</button>
        </div>
    </form>
</div>
